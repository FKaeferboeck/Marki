{
    "compilerOptions": {
        "module": "node16",
        "target": "esnext",
        "moduleResolution": "node16",
        //"esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir":        "./src",
        "declarationDir": "./dist-types",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": ".",
        "types": [ "node" ],
        "typeRoots": ["./node_modules/@types"],
        "allowJs": true
    },
    "include": ["src/**/*.ts", ],
    "exclude": ["node_modules", "test", "src/url-resolve.ts", "src/path.ts"],
    /* Das Folgende behebt einen Fehler beim Start: */
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true,
    }
}
