{
  "name": "marki",
  "version": "1.0.0",
  "type": "module",
  "description": "extensible Markdown parser with support for incremental changes",
  "main": "./dist-esm/exports/index.js",
  "types": "./dist-types/exports/index.d.ts",
  "directories": {
    "test": "test"
  },
  "exports": {
    ".": {
      "require": "./dist-cjs/exports/index.js",
      "import": {
        "types": "./dist-types/exports/index.d.ts",
        "default": "./dist-esm/exports/index.js"
      }
    },
    "./path": {
      "require": "./dist-cjs/path.cjs.js",
      "import": {
        "types": "./dist-types/path.d.ts",
        "default": "./dist-esm/path.esm.js"
      }
    },
    "./util": {
      "require": "./dist-cjs/exports/index-util.js",
      "import": {
        "types": "./dist-types/exports/index-util.d.ts",
        "default": "./dist-esm/exports/index-util.js"
      }
    },
    "./blocks": {
      "require": "./dist-cjs/exports/index-blocks.js",
      "import": {
        "types": "./dist-types/exports/index-blocks.d.ts",
        "default": "./dist-esm/exports/index-blocks.js"
      }
    },
    "./inline": {
      "require": "./dist-cjs/exports/index-inline.js",
      "import": {
        "types": "./dist-types/exports/index-inline.d.ts",
        "default": "./dist-esm/exports/index-inline.js"
      }
    },
    "./extensions": {
      "require": "./dist-cjs/exports/index-extensions.js",
      "import": {
        "types": "./dist-types/exports/index-extensions.d.ts",
        "default": "./dist-esm/exports/index-extensions.js"
      }
    },
    "./url-resolve.js": {
      "import": "./dist-esm/url-resolve.js",
      "require": "./dist-cjs/url-resolve.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist-types/exports/index.d.ts"
      ],
      "util": [
        "./dist-types/exports/index-util.d.ts"
      ],
      "blocks": [
        "./dist-types/exports/index-blocks.d.ts"
      ],
      "inline": [
        "./dist-types/exports/index-inline.d.ts"
      ],
      "extensions": [
        "./dist-types/exports/index-extensions.d.ts"
      ]
    }
  },
  "scripts": {
    "test": "vitest --reporter=dot",
    "test2": "vitest --config ./test/vitest.config.ts",
    "cjs": "tsc -p tsconfig.cjs.json",
    "esm": "tsc -p tsconfig.esm.json",
    "compile": "npm run esm && npm run cjs",
    "dbg": "node --loader=ts-node/esm ./test/debug.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FKaeferboeck/Marki.git"
  },
  "keywords": [
    "Markdown"
  ],
  "author": "Florian Käferböck",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/FKaeferboeck/Marki/issues"
  },
  "homepage": "https://github.com/FKaeferboeck/Marki#readme",
  "dependencies": {
    "@types/Node": "npm:@types/node@^24.1.0",
    "commonmark": "^0.31.2",
    "vitest": "^3.0.5",
    "vscode-languageserver": "^9.0.1"
  },
  "devDependencies": {
    "@types/commonmark": "^0.27.10",
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
