{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"rootDir":        "./src",
		"outDir":         "./out/esm",
        "declarationDir": "./out/types",
		"types": ["node"],
		"declaration": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
